<h1>処方箋詳細</h1>

<div class="prescription-info">
  <p><strong>患者:</strong> <%= @prescription.patient.full_details %></p>
  <p><strong>発行日:</strong> <%= @prescription.formatted_issue_date %></p>
</div>

<h2>処方内容</h2>
<table>
  <thead>
    <tr>
      <th>薬剤名</th>
      <th>用量</th>
      <th>服用方法</th>
    </tr>
  </thead>
  <tbody>
    <% @prescription.prescription_items.includes(:medication).each do |item| %>
      <tr>
        <td><%= item.medication.display_name %></td>
        <td><%= item.dosage %></td>
        <td><%= item.instructions %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '戻る', prescriptions_path %>