<h1>患者一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>年齢</th>
      <th>保険番号</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.age %>歳</td>
        <td><%= patient.insurance_number %></td>
        <td><%= link_to '詳細', patient %></td>
        <td><%= link_to '編集', edit_patient_path(patient) %></td>
        <td><%= link_to '削除', patient, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

